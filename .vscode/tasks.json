  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "Cargo Run",
      "command": "cargo",
      "args": ["run"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "type": "process",
      "label": "Cargo Test",
      "command": "cargo",
      "args": ["test"],
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    }
  ]
}
